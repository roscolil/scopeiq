{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "jsx": "react-jsx", // or "react" for older versions
    "lib": ["DOM", "ESNext"],
    "types": ["react", "react-dom", "vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/services/*": ["./src/services/*"],
      "@/types/*": ["./src/types/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/config/*": ["./src/config/*"],
      "@/pages/*": ["./src/pages/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": [
    "dist",
    "public",
    ".amplify",
    "eslint.config.js",
    "postcss.config.js",
    "test-aws-config.js",
    "cloudformation-dynamodb.yml",
    "**/*.yml",
    "**/*.yaml"
  ]
}
